<%= stylesheet_link_tag "form.css" %>



<ul>
<% @listing.errors.full_messages.each do |message|
 %> <li> <%= message %></li>
 <% end %>
</ul>

<%= form_with model: @listing, local: true do |form|  %>
<div class="form-container">
<h1 class="title">Create a new Task</h1>
<div class="inner-container">
<%= form.label :industry %>
<%= form.text_field :industry %>
</div>
<div class="inner-container">
<%= form.label :task %>
<%= form.text_area :task %>
</div>
<div class="inner-container">
<%= form.label :price %>
<%= form.number_field :price, min: 1.00, step: 0.05 %>
</div>
<div class="inner-container">
<%= form.label :images%>
<%= form.file_field :images, accept: 'image/png, image/jpg, image/jpeg, image/gif'%>
</div>
<div class="inner-container">
<%= form.submit 'Create Task', :class => "btn btn-outline-primary"%>
</div>
</div>
<% end %>